{
  "name": "2gl",
  "version": "0.0.1",
  "description": "WebGL library for 2gis projects",
  "repository": {
    "type": "git",
    "url": "git@github.com:2gis/2gl.git"
  },
  "dependencies": {
    "gl-matrix": "^2.3.1",
    "stats-js": "^1.0.0-alpha1"
  },
  "devDependencies": {
    "babel-eslint": "^3.1.26",
    "babelify": "^6.1.3",
    "brfs": "^1.4.0",
    "browserify": "^11.0.0",
    "eslint": "^0.24.1",
    "uglify-js": "^2.4.24",
    "watchify": "^3.3.1"
  },
  "browserify": {
    "transform": [
      ["babelify", {"ignore": "node_modules"}],
      "brfs"
    ]
  },
  "scripts": {
    "build": "browserify src/index.js | uglifyjs -mc --screw-ie8 > dist/2gl.js",
    "dev:lib": "watchify src/index.js -o dist/2gl.js -dv",
    "dev:demo": "watchify demo/index.js -o dist/demo.js -dv",
    "dev": "npm run dev:lib & npm run dev:demo",
    "lint": "eslint src; exit 0"
  }
}
