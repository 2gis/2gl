{
  "name": "2gl",
  "version": "0.0.8",
  "description": "WebGL library for 2gis projects",
  "repository": {
    "type": "git",
    "url": "git@github.com:2gis/2gl.git"
  },
  "main": "src/index.js",
  "dependencies": {
    "babelify": "^6.3.0",
    "brfs": "^1.4.1",
    "gl-matrix": "^2.3.1"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.1",
    "browserify": "^11.0.1",
    "dat-gui": "^0.5.0",
    "eslint": "^1.3.1",
    "uglify-js": "^2.4.24",
    "watchify": "^3.4.0"
  },
  "browserify": {
    "transform": [
      "babelify",
      "brfs"
    ]
  },
  "scripts": {
    "start": "npm run dev",
    "build": "browserify src/index.js -s dgl | uglifyjs -mc --screw-ie8 > dist/2gl.js",
    "dev:lib": "watchify src/index.js -s dgl -o dist/2gl.js -dv",
    "dev:demo": "watchify demo/index.js -o dist/demo.js -dv",
    "dev": "npm run dev:lib & npm run dev:demo",
    "lint": "eslint src; exit 0"
  }
}
